package com.framework.utils;

import io.restassured.RestAssured;
import io.restassured.response.Response;
import org.json.JSONObject;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;

public class ApiUtils {

    public static Map<String, String> callApi(String url, Map<String, String> headers, String username, String password) {
        System.out.println("ðŸ”¹ Calling API: " + url);

        Response res = RestAssured
                .given()
                .auth().preemptive().basic(username, password)
                .headers(headers)
                .when()
                .get(url)
                .then()
                .extract()
                .response();

        int status = res.statusCode();
        System.out.println("âœ… API Response Code: " + status);

        // Convert and flatten JSON response
        JSONObject json = new JSONObject(res.getBody().asString());
        Map<String, String> flatMap = new HashMap<>();
        flattenJson("", json, flatMap);

        flatMap.put("statusCode", String.valueOf(status));
        return flatMap;
    }

    private static void flattenJson(String prefix, JSONObject json, Map<String, String> flatMap) {
        Iterator<String> keys = json.keys();
        while (keys.hasNext()) {
            String key = keys.next();
            Object value = json.get(key);
            String fullKey = prefix.isEmpty() ? key : prefix + "." + key;

            if (value instanceof JSONObject) {
                flattenJson(fullKey, (JSONObject) value, flatMap);
            } else {
                flatMap.put(fullKey, String.valueOf(value));
            }
        }
    }
}
