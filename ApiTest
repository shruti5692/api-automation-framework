import io.restassured.RestAssured;
import io.restassured.response.Response;

public class ApiTest {

    public static void main(String[] args) {
        String jwt = JwtFetcher.getJwtToken();

        String apiUrl = "https://digitaldev-int-rbwm.systems.uk.hsbc/cb-rps-05/gb-hbeu-rps-pod-cust-rel-acct-enq-sct-internal-proxy/v1/cust/84d89877f0d4041efb6bf91a16f0248f2fd573e6af05c19f96bedb9188217884/rel-acct?maxAccounts=0004&=%27";

        Response response = RestAssured
                .given()
                .relaxedHTTPSValidation()
                .header("Authorization", "Bearer " + jwt)
                .header("X-HSBC-Sensitive-Data", "someValue") // ðŸ”¹ this will come from Excel later
                .get(apiUrl);

        System.out.println("Status Code: " + response.statusCode());
        System.out.println("Response: " + response.asPrettyString());
    }
}
