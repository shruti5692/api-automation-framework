import io.restassured.RestAssured;
import io.restassured.response.Response;

public class JwtFetcher {

    public static String getJwtToken() {
        // ðŸ”¹ Replace with the actual token translator URL
        String tokenUrl = "https://myworkspace-uk-dev.euw2.pre-prod.aws.cloud.hsbc/sso_uk/gcp_tokenTranslator?_action=translate";

        Response response = RestAssured
                .given()
                .relaxedHTTPSValidation() // if SSL issues
                .header("Content-Type", "application/json")
                // add any body/headers needed for authentication
                .post(tokenUrl);

        if (response.statusCode() == 200) {
            return response.jsonPath().getString("issued_token");
        } else {
            throw new RuntimeException("Failed to fetch JWT token. Status: " + response.statusCode());
        }
    }

    public static void main(String[] args) {
        String jwt = getJwtToken();
        System.out.println("Fetched JWT: " + jwt);
    }
}
