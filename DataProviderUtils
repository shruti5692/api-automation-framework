package com.framework.utils;

import com.framework.config.ConfigManager;
import org.testng.annotations.DataProvider;

import java.util.List;
import java.util.Map;

/**
 * TestNG DataProvider that reads Excel and returns rows as single Map param.
 * Tests should declare: @Test(dataProvider = "excelData", dataProviderClass = DataProviderUtils.class)
 * and accept Map<String,String> row parameter.
 */
public class DataProviderUtils {

    @DataProvider(name = "excelData")
    public static Object[][] excelData() throws Exception {
        String excelPath = ConfigManager.get("excel.path");
        String sheet = ConfigManager.get("excel.sheet");
        if (sheet == null || sheet.isEmpty()) sheet = "Sheet1";
        List<Map<String, String>> rows = ExcelUtils.readSheet(excelPath, sheet);
        Object[][] data = new Object[rows.size()][1];
        for (int i = 0; i < rows.size(); i++) data[i][0] = rows.get(i);
        return data;
    }
}
